<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@color/less_darker_blue"
    android:orientation="vertical">


    <TextView
        android:id="@+id/category_textview"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_bold"
        tools:text="Category: Pemasukan"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/date_textview"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        tools:text="Tanggal: 15-02-2023"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/emailInput"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:hint="e.g. Beli Ayam Geprek"
        android:layout_marginTop="8dp"
        android:autofillHints="emailAddress"
        android:background="@color/light_blue"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/passwordInput"
        android:text="Amount (in Rupiah)"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/amount_edit_text"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:hint="50000"
        android:layout_marginTop="8dp"
        android:autofillHints="password"
        android:background="@color/light_blue"
        android:inputType="number"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/locationInput"
        android:text="Location"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="320dp"
        android:layout_height="96dp"
        android:singleLine="false"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        android:layout_marginTop="8dp"
        android:background="@color/light_blue"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:autofillHints="location" />

    <Button
        android:id="@+id/saveTransactionButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/pale_yellow"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="8dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/crust_blue"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/deleteTransactionButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="8dp"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@color/crust_blue"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />
</LinearLayout>