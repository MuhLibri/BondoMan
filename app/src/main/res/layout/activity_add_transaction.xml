<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/less_darker_blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/emailInput"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/title"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:hint="e.g. Beli Ayam Geprek"
        android:layout_marginTop="8dp"
        android:autofillHints="emailAddress"
        android:background="@color/light_blue"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/passwordInput"
        android:text="Amount (in Rupiah)"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:hint="50000"
        android:layout_marginTop="8dp"
        android:autofillHints="password"
        android:background="@color/light_blue"
        android:inputType="number"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/passwordInput"
        android:text="Category"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@color/light_blue"
        android:fontFamily="@font/inter_regular"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_regular"
        android:labelFor="@+id/locationInput"
        android:text="Location"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/location"
        android:layout_width="320dp"
        android:layout_height="96dp"
        android:singleLine="false"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:autofillHints="password"
        android:inputType="textMultiLine"
        android:background="@color/light_blue"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/addTransactionButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/pale_yellow"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="8dp"
        android:text="Add Transaction"
        android:textAllCaps="false"
        android:textColor="@color/crust_blue"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />
</LinearLayout>