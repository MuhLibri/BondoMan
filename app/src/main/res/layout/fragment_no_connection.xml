<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:paddingVertical="60dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="192dp"
        android:contentDescription="No internet connection icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/dialogDesc"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Meow! Sepertinya kamu tidak memiliki akses internet"
        android:textColor="@color/crust_blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/tryConnAgainBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/pale_yellow"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="8dp"
        android:text="Coba Lagi"
        android:textAllCaps="false"
        android:textColor="@color/crust_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogDesc"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/accessOfflineBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/pale_yellow"
        android:fontFamily="@font/inter_semi_bold"
        android:paddingVertical="8dp"
        android:layout_marginBottom="60dp"
        android:text="Akses secara Offline"
        android:textAllCaps="false"
        android:textColor="@color/crust_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tryConnAgainBtn"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>