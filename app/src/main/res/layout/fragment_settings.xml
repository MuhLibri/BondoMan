<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/simpanButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inter_bold"
        android:text="Simpan daftar transaksi"
        android:textAlignment="textStart"
        android:textColor="@color/darker_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/kirimButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inter_bold"
        android:text="Kirim daftar transaksi"
        android:textAlignment="textStart"
        android:textColor="@color/darker_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpanButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/acakButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/inter_bold"
        android:text="Acak transaksi"
        android:textAlignment="textStart"
        android:textColor="@color/darker_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kirimButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/keluarButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/inter_bold"
        android:text="Keluar"
        android:textAlignment="textStart"
        android:textColor="@color/darker_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acakButton"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>